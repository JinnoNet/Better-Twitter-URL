{
  "name": "Better Twitter URL",
  "version": "1.0",
  "description": "Remove extraneous elements of the Twitter URL and redirect.",
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://*.twitter.com/*", "*://twitter.com/*"],
  "icons": {
    "16": "img/16.png",
    "32": "img/32.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "manifest_version": 3
}
